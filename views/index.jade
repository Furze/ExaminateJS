extends nav

block homeNav
  li.active
    a(href="/") Home
block content
  if !user
    div.jumbotron
      div.container
        img(src="images/logo.png", alt="Examinate Logo", height="150", width="150")
        h1 Examinate
        h3  Practice exams and crowd sourced answers
        block message
        a.btn.btn-default.btn-lg(href="/auth/facebook")
          i.fa.fa-facebook
          |  | Sign in with Facebook
  else
    div.minitron
      div.container
        h1 Welcome, #{user.displayName}
    div.container
      div.row
        div.col-lg-8
          h2 Search for a course
          div.input-group#main-search
            div.input-group-btn
              button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown") Select a University
                span.caret
              ul.dropdown-menu
                li
                  a(href="#") UoA
                li
                  a(href="#") Other uni..
            input.form-control(type="input", placeholder="e.g. compsci 280")
            div.input-group-btn
              button.btn.btn-default(type="button") Go!
        div.col-lg-4
          h2 Your courses
          if courses
            for course in courses
                div.row
                  div.col-lg-12
                    a.btn.btn-default.btn-block.course-button(href="/courseLanding?c="+ course.name)
                      h3 #{course.name}
                      p #{course.exams} exams (#{course.complete} complete)